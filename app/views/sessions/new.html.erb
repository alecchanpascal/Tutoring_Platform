<div class="form-container m-3">
    <h1>Sign in</h1>
    <%= form_with url: session_path, local: true do |f| %>
    <div>
    <%= f.label :email%>
    <%=  f.email_field :email, class: "form-control" %>
    </div>
    <div>
    <%= f.label :password%>
    <%= f.password_field :password, class: "form-control" %>
    </div>
    <%= f.submit "Sign In", class: "btn btn-outline-primary my-3" %>
    <% end %>

    <hr>
    <br>
    <div>Don't have an account?  <%= link_to "Sign Up", new_user_path, class: "btn btn-primary my-3 ms-3" %></div>
</div>