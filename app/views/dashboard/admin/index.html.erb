<h1>Tutor Admin Panel</h1>

<% @lessons.each do |lesson| %>
  <% if lesson.tutor == current_user %>
  <div>
    <h2><%= link_to lesson.subject, lesson_path(lesson) %></h2>
    <h4> Created <%= time_ago_in_words(lesson.created_at) %> ago </h4>
  </div>
  <% end %>
<% end %>

<% @reviews.each do |review| %>
  <% if review.tutor == current_user %>
    <div>
      <h2><%= review.rating %></h2>
      <h4><%= review.body %></h4>
      <% if review.published == false %>
        <%= button_to :Publish, user_review_path(current_user, review), method: :patch, class: "btn btn-primary" %>
      <% end %>
    </div>
  <% end %>
<% end %>


