<% @lessons.each do |lesson| %>
<hr>
    <p><%= link_to  "Subject:  "+ lesson.subject, lesson_path(lesson) %> </p>
    <p> Description: <%= lesson.description %> </p>
    <p> Cost: <%= lesson.cost %> </p>
    <p> Time: <%= lesson.time_of_lesson %> </p>
    <p> Tutor name: <%= lesson.tutor.username %> </p>
<hr>
<% end %>