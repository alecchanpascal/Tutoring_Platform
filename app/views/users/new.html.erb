<h1>Sign up</h1>
<%if @user.errors.any? %>
    <p> <%= @user.erros.full_messages.join(",")%></p>
<% end %>

<%= form_with model: @user do |f| %>
    <div>
        <%= f.label :username%>
        <%=f.text_field :username%>
    </div>

    <div>
        <%= f.label :eamil%>
        <%=f.text_field :eamil%>
    </div>

    <div>
        <%= f.label :password%>
        <%=f.text_field :password%>
    </div>

    <div>
        <%= f.label :password_confirmation%>
        <%=f.text_field :password_confirmation%>
    </div>
    <div>
        <%= f.label :is_tutor %>
        <%= f.check_box :is_tutor %>
    </div>  
    <%= f.submit "Sign up" %>
<% end %>